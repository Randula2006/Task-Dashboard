<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="allTasks-root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskdashboardjava.AllTasksController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label prefHeight="18.0" prefWidth="603.0" styleClass="allTasks-title" text="All Tasks" />
            <ScrollPane prefHeight="388.0" prefWidth="600.0" styleClass="tasks-container">
              <content>
                  <Pane styleClass="task-card">
                     <children>
                        <Label layoutY="28.0" prefHeight="18.0" prefWidth="294.0" styleClass="task-title" text="Task Title" />
