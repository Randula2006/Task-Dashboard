                        <Button layoutX="157.0" layoutY="163.0" mnemonicParsing="false" text="EDIT">
                           <styleClass>
                              <String fx:value="task-btn" />
                              <String fx:value="edit-btn" />
                           </styleClass>
                        </Button>
                        <Button layoutX="209.0" layoutY="163.0" mnemonicParsing="false" text="DELETE">
                           <styleClass>
                              <String fx:value="task-btn" />
                              <String fx:value="delete-btn" />
                           </styleClass>
                        </Button>
                     </children>
                  </Pane>
              </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
