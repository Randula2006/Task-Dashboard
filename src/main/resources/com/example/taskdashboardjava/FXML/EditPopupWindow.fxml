      <TextField fx:id="editTaskTitle" layoutX="30.0" layoutY="95.0" prefHeight="26.0" prefWidth="436.0" />
      <Label layoutX="30.0" layoutY="142.0" styleClass="input-label" text="Description" />
      <TextArea fx:id="editTaskDescription" layoutX="30.0" layoutY="167.0" prefHeight="72.0" prefWidth="440.0" />
      <Label layoutX="30.0" layoutY="256.0" styleClass="input-label" text="Due Date" />
      <DatePicker fx:id="editTaskDueDate" layoutX="30.0" layoutY="279.0" prefHeight="26.0" prefWidth="206.0" />
      <HBox layoutX="30.0" layoutY="314.0" prefHeight="72.0" prefWidth="362.0" spacing="20.0">
