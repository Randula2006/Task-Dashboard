         <children>
            <Button mnemonicParsing="false" onAction="#handleSaveChanges" styleClass="save-changes-button" text="Save" />
            <Button mnemonicParsing="false" onAction="#handleCancel" styleClass="cancel-button" text="Cancel" />
         </children>
      </HBox>
   </children>
