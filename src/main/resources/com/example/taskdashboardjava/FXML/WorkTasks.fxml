<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskdashboardjava.controller.WorkTasksController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label prefHeight="18.0" prefWidth="603.0" text="Work Tasks" styleClass="Tasks-title" />
             <ScrollPane prefHeight="388.0" prefWidth="600.0" styleClass="tasks-container">
                 <content>
                     <Pane styleClass="task-card">
                         <children>
                             <Label layoutY="28.0" prefHeight="18.0" prefWidth="294.0" styleClass="task-title" text="Task Title" />
                             <Label layoutX="-1.0" layoutY="162.0" prefHeight="18.0" prefWidth="294.0" styleClass="task-dueDate" text="Due Date" />
